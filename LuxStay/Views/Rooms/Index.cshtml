    <nav class="header__navbar col l-6 is-flex middle">
        <ul class="header__navbar--list is-flex middle">
            @using LuxStay.Areas.Admin.Data
            @if (Session["USER"] == null)
            {
                <!-- Not login -->
                <li class="header__navbar--item header__navbar-register">
                    <a href="/Account/Register">Đăng ký</a>
                </li>
                <li class="header__navbar--item header__navbar-login">
                    <a href="/Account/Login">Đăng nhập</a>
                </li>
            }
            else
            {
                <!-- Login -->
                <li class="header__navbar--item header__navbar-user has-dropdown-box">
                    <a class="is-flex middle btn--dropdown">
                        <div class="user-avar">
                            <img src="~/Assets/Client/assets/img/user-ava.jpg" alt="">
                        </div>
                        <span>@(((CustomerModel)Session["USER"]).fullname)</span>
                    </a>
                    <div class="user-menu dropdown-box">
                        <ul class="user-menu__list">
                            <li class="user-menu__item">
                                <a href="" class="user-menu__link">
                                    <i class="far fa-calendar"></i>
                                    <p>Đặt chỗ của tôi</p>
                                </a>
                            </li>
                            <li class="user-menu__item">
                                <a href="" class="user-menu__link">
                                    <i class="fas fa-cog"></i>
                                    <p>Cài đặt tài khoản</p>
                                </a>
                            </li>
                            <li class="user-menu__item">
                                <a href="" class="user-menu__link">
                                    <i class="far fa-heart"></i>
                                    <p>Yêu thích</p>
                                </a>
                            </li>
                            <li class="user-menu__item">
                                <a href="/Account/Logout" class="user-menu__link">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <p>Đăng xuất</p>
                                </a>
                            </li>
                            <li class="user-menu__line"></li>
                        </ul>
                    </div>
                </li>
            }
            <!-- crurrency -->
            <li class="header__navbar--item header__navbar-currency has-dropdown-box">
                <a class="is-flex middle btn--dropdown">
                    <div class="currency-avar">
                        <img src="~/Assets/Client/assets/img/flag/vn.svg" alt="">
                    </div>
                    <span>VND</span>
                </a>
                <div class="currency-box dropdown-box">
                    <div class="is-flex">
                        <div class="currency-box__language ">
                            <a href="" class="is-flex middle is-checked">
                                <img src="~/Assets/Client/assets/img/flag/vn.svg" alt="">
                                <span>Tiếng Việt</span>
                            </a>
                            <a href="" class="is-flex middle ">
                                <img src="~/Assets/Client/assets/img/flag/en.svg" alt="">
                                <span>English</span>
                            </a>
                        </div>
                        <div class="currency-box__monney">
                            <a href="" class="is-flex middle is-checked">
                                <b>VND</b>
                                <span>Việt Nam Đồng</span>
                            </a>
                            <a href="" class="is-flex middle ">
                                <b>USA</b>
                                <span>United States Dollar</span>
                            </a>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </nav>
}
<div class="detail-products-page-wp">
    <div class="detail-products-page__slider-wp">
        <ul class="detail-products-page__slider">
            @foreach (var item in Model.sliderImages)
            {
                <li class="detail-products-page__slider--item">
                    <img class="detail-products-page__slider--img"
                         src="@item" alt="">
                </li>
            }
        </ul>
    </div>
    <section class="detail-products-page__container grid wide">
        <div class="row">
            <!-- page content -->
            <div class="col l-8">
                <div class="detail-product__content">
                    <!-- Breadcrum -->
                    <div class="breadcrum">
                        <ul class="breadcrum-list">
                            <li class="breadcrum-item">
                                <a href="/index.html" class="breadcrum-item--link">
                                    <lord-icon src="https://cdn.lordicon.com//gmzxduhd.json" trigger="hover"
                                               colors="primary:#222,secondary:#f65e39" style="width:30px;height:30px">
                                    </lord-icon>
                                </a>
                            </li>
                            <li class="breadcrum-item">
                                <i class="fas fa-chevron-right breadcrum-item--icon"></i>
                                <a href="" class="breadcrum-item--link">Việt Nam</a>
                            </li>
                            <li class="breadcrum-item">
                                <i class="fas fa-chevron-right breadcrum-item--icon "></i>
                                <a href="" class="breadcrum-item--link">@Model.Address</a>
                            </li>
                            <li class="breadcrum-item">
                                <i class="fas fa-chevron-right breadcrum-item--icon "></i>
                                <a href="" class="breadcrum-item--link">@Model.roomName</a>
                            </li>
                        </ul>
                    </div>
                    <!-- detail product header -->
                    <div class="detail-product__heading">
                        <h1 class="detail-product__heading--title">
                            @Model.roomName - @Model.bedRoom Phòng Ngủ, @Model.area m2
                        </h1>
                    </div>
                    <!-- detail product body -->
                    <div class="detail-product__body">
                        <!-- Place info -->
                        <div class="detail-product__inform">
                            <div class="detail-product__inform--location">
                                <i class="fas fa-map-marker-alt detail-product__inform--icon"></i>
                                <span class="detail-product__inform--add">
                                    @Model.Address, Việt Nam
                                </span>
                                <a href="#map" class="detail-product__inform-check-map">Xem bản đồ</a>
                            </div>
                            <div class="detail-product__inform--space">
                                <i class="fas fa-hotel detail-product__inform--icon"></i>
                                <span class="detail-product__inform--add">@Model.roomCategory ·</span>
                                <span class="detail-product__inform--width-square">@Model.area m<sup>2</sup></span>
                            </div>
                            <div class="detail-product__inform--type">
                                <span class="detail-product__inform--type-item">Phòng riêng · </span>
                                <span class="detail-product__inform--type-item">@Model.bathRoom Phòng tắm · </span>
                                <span class="detail-product__inform--type-item">@Model.bedNumber Giường · </span>
                                <span class="detail-product__inform--type-item">@Model.bedRoom Phòng ngủ · </span>
                                <span class="detail-product__inform--type-item">@Model.peopleMax Khách (tối đa)</span>
                            </div>
                            <div class="short-info-wp">
                                <p class="short-title">Tóm tắt về @Model.roomName</p>
                                <div class="short-info">
                                    <div class="short-info-item">
                                        @Html.Raw(Model.content)
                                    </div>
                                </div>
                                <div class="short-info-trigger">
                                    Đọc thêm
                                    <i class="fas fa-caret-down short-info-trigger-icon"></i>
                                </div>
                            </div>
                        </div>
                        <!-- Place service -->
                        <div class="detail-product__sub-inform">
                            <div class="detail-product__sub-inform--headding">
                                <h3 class="detail-product__sub-inform--title">Tiện nghi chỗ ở</h3>
                                <span class="detail-product__sub-inform--sub-title">
                                    Giới thiệu về các tiện nghi
                                    và
                                    dịch vụ tại nơi lưu trú
                                </span>
                            </div>
                            <div class="detail-product__sub-inform--body">
                                <div class="short-info-wp mt-0">
                                    <div class="short-info">
                                        <!-- Convinient -->
                                        <div class="short-info-item detail-product__sub-inform--body-section">
                                            <h4 class="detail-product__sub-inform--body-title">Tiện ích</h4>
                                            <ul class="detail-product__sub-inform--list row">
                                                <li class="detail-product__sub-inform--item col l-3">
                                                    <i class="fas fa-wifi detail-product__sub-inform--item-icon"></i>
                                                    <span class="detail-product__sub-inform--item-info">Wifi</span>
                                                </li>
                                                <li class="detail-product__sub-inform--item col l-3">
                                                    <i class="fas fa-tv detail-product__sub-inform--item-icon"></i>
                                                    <span class="detail-product__sub-inform--item-info">TV</span>
                                                </li>
                                                <li class="detail-product__sub-inform--item col l-3">
                                                    <i class="fas fa-wifi detail-product__sub-inform--item-icon"></i>
                                                    <span class="detail-product__sub-inform--item-info">Tủ Lạnh</span>
                                                </li>
                                                <li class="detail-product__sub-inform--item col l-3">
                                                    <i class="fas fa-wifi detail-product__sub-inform--item-icon"></i>
                                                    <span class="detail-product__sub-inform--item-info">Điều Hòa</span>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="short-info-trigger">
                                        Xem thêm
                                        <i class="fas fa-caret-down short-info-trigger-icon"></i>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <!-- Place price -->
                        <div class="detail-product__sub-inform">
                            <div class="detail-product__sub-inform--headding">
                                <h3 class="detail-product__sub-inform--title">Giá phòng</h3>
                                <span class="detail-product__sub-inform--sub-title">
                                    Giá có thể tăng vào cuối
                                    tuần hoặc ngày lễ
                                </span>
                            </div>
                            <div class="detail-product__sub-inform--body">
                                <div class="detail-product__sub-inform--body-section">
                                    <div class="detail-product__sub-inform--table">
                                        <div class="detail-product__sub-inform--table-item">
                                            <span>Thứ hai - Thứ 5</span>
                                            <span class="text-bold">850,000₫</span>
                                        </div>
                                        <div class="detail-product__sub-inform--table-item">
                                            <span>Thứ sáu - Chủ nhật</span>
                                            <span class="text-bold">950,000₫</span>
                                        </div>
                                        <div class="detail-product__sub-inform--table-item">
                                            <span>Phí trẻ em tăng thêm</span>
                                            <span class="text-bold">125,000₫ (sau 2 khách)</span>
                                        </div>
                                        <div class="detail-product__sub-inform--table-item">
                                            <span>Thuê theo tháng</span>
                                            <span class="text-bold">-7.88 %</span>
                                        </div>
                                        <div class="detail-product__sub-inform--table-item">
                                            <span>Số đêm tối thiểu</span>
                                            <span class="text-bold">1 đêm</span>
                                        </div>
                                        <div class="detail-product__sub-inform--table-item">
                                            <span>Số đêm tối đa</span>
                                            <span class="text-bold">90 đêm</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Pace Rules -->
                        <div class="detail-product__sub-inform">
                            <div class="detail-product__sub-inform--headding">
                                <h3 class="detail-product__sub-inform--title">
                                    Nội quy và chính sách về chỗ ở
                                </h3>
                            </div>
                            <div class="detail-product__sub-inform--body">
                                <div class="detail-product__sub-inform--body-section">
                                    <h4 class="detail-product__sub-inform--body-title">Chính sách hủy phòng</h4>
                                    <p class="detail-product__sub-inform--body-content">
                                        <b>Linh hoạt:</b> Miễn
                                        phí hủy phòng trong vòng 48h sau khi đặt phòng
                                        thành công
                                        và trước 1 ngày so với thời gian check-in. Sau đó, hủy phòng trước 1
                                        ngày so với thời gian check-in, được hoàn lại 100% tổng số tiền đã trả
                                        (trừ phí dịch vụ).
                                    </p>
                                </div>
                                <div class="detail-product__sub-inform--body-section">
                                    <h4 class="detail-product__sub-inform--body-title">Lưu ý đặc biệt</h4>
                                    <p class="detail-product__sub-inform--body-content">
                                        Đưa đón sân bay: giá đưa
                                        đón từ sân bay Nội Bài tới căn hộ The Galaxy
                                        Home 400.000VND / chiều / xe 4 chỗ.
                                    </p>
                                    <p class="detail-product__sub-inform--body-content">
                                        Không hút thuốc trong
                                        căn hộ
                                    </p>
                                    <p class="detail-product__sub-inform--body-content">
                                        Không sử dụng chất kích
                                        thích
                                    </p>
                                    <p class="detail-product__sub-inform--body-content">
                                        Không mở tiệc trong căn
                                        hộ
                                    </p>
                                    <p class="detail-product__sub-inform--body-content">
                                        Không mang theo vật nuôi
                                    </p>
                                    <p class="detail-product__sub-inform--body-content">
                                        Vui lòng giữ im lặng sau
                                        22h
                                    </p>
                                    <p class="detail-product__sub-inform--body-content">
                                        Vui lòng tắt các thiết
                                        bị khi bạn ra khỏi phòng
                                    </p>
                                </div>
                                <div class="detail-product__sub-inform--body-section">
                                    <h4 class="detail-product__sub-inform--body-title">Thời gian nhận phòng</h4>
                                    <div class="detail-product__sub-inform--table">
                                        <div class="detail-product__sub-inform--table-item">
                                            <span>Nhận phòng</span>
                                            <span class="text-bold">02:00 pm</span>
                                        </div>
                                        <div class="detail-product__sub-inform--table-item">
                                            <span>Trả phòng</span>
                                            <span class="text-bold">12:00 pm</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Pace location -->
                        <div id="map" class="detail-product__sub-inform">
                            <div class="detail-product__sub-inform--headding">
                                <h3 class="detail-product__sub-inform--title">
                                    Địa chỉ chỗ ở
                                </h3>
                            </div>
                            <div class="detail-product__sub-inform--body">
                                <div class="mt-12">
                                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.1251208102735!2d106.71230301477159!3d10.801727892304376!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317528a459cb43ab%3A0x6c3d29d370b52a7e!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBDw7RuZyBuZ2jhu4cgVFAuSENN!5e0!3m2!1svi!2s!4v1625380898308!5m2!1svi!2s"
                                            width="856" height="400" style="border:0; border-radius: 5px;"
                                            allowfullscreen="" loading="lazy">
                                    </iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- page sidebar -->

            <div class="col l-4 px-35">
                <div class="detail-product__sidebar">
                    <div class="detail-product__share">
                        <div class="btn">
                            <span>Chia sẻ</span>

                        </div>
                    </div>
                    <div class="detail-product__sidebar-content-wp">
                        <!-- check up -->
                        <form action="/checkout" method="get">
                            <div class="detail-product__sidebar-content">
                                <div class="detail-product__room-pricing">
                                    @if (Model.salePersent != 0)
                                    {
                                        <span class="detail-product__room-price">@Model.priceSale ₫</span>
                                        <span class="detail-product__room-night">/1 đêm</span>
                                        <strike class="detail-product__room-price-discount">@Model.priceShow ₫</strike>
                                    }
                                    else
                                    {
                                        <span class="detail-product__room-price">@Model.priceShow ₫</span>
                                        <span class="detail-product__room-night">/1 đêm</span>
                                    }


                                </div>
                                @if (Model.salePersent != 0)
                                {
                                    <div class="detail-product__room-discount">
                                        <span class="btn discount-box">
                                            Giảm @Model.salePersent % từ chủ
                                            nhà
                                        </span>
                                    </div>
                                }

                                <div class="detail-product__room-date">
                                    <div class="header__search--item header__search-day center" style="width: 100%">
                                        <div class="is-flex middle" style="width:100%">
                                            <input class="app-datepicker datepicker__header text-center" style="font-size:20px;font-weight:500" readonly />
                                            <input type="hidden" name="checkin" id="checkin" />
                                            <input type="hidden" name="checkout" id="checkout" />
