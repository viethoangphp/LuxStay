
@{
    ViewBag.Title = "Danh sách đơn đặt phòng";
    Layout = "~/Areas/Admin/Views/Shared/__AdminLayout.cshtml";
}

@section js{
    <script>
        $(document).ready(function () {
            var table = $("#listView").DataTable({
                ordering: false,
                columnDefs: [
                    { orderable: false, sortable: false, targets: 0 },
                    { width: 130, targets: 8 },
                    { width: 100, targets: 6 }
                ],
                columns: [
                    { "data": "billId" },
                    { "data": "customername" },
                    { "data": "roomname" },
                    { "data": "check_in" },
                    { "data": "check_out" },
                    { "data": "create_at" },
                    { "data": "total" },
                    {
                        "data": "status",
                        "render": function (data, type, row, meta) {
                            if (data == 1) {
                                return 'Đã thanh toán';
                            } else if (data == -1) {
                                return 'Đã hủy bỏ';
                            } else {
                                return 'Chờ xác nhận';
                            }
                        }
                    },
                    {
                        "data": "billId",
                        "render": function (data, type, row, meta) {
                            var html = '<div class="align-middle">';
                            if (row.status == 0) {
                                html += '<button class="btn btn-primary btn-confirm" data-id="' + data + '">' +
                                '<i class="fas fa-check"></i>' +
                                '</button>' }
                            html += '<button class="btn btn-success btn-edit" data-id="' + data + '" data-toggle="modal" data-target="#formModal">' +
                                '<i class="fas fa-eye"></i>' +
                                '</button>' +
                                '<button class="btn btn-danger btn-delete" data-id="' + data + '">' +
                                '<i class="fas fa-trash-alt"></i>' +
                                '</button>' +
                                '</div>';
                            return html;
                        }
                    }
                ],
                responsive: true,
                autoWidth: false,
                lengthMenu: [5, 10, 20, 50],
                order: [[1, 'asc']],
                ajax: {
                    url: "/Admin/Bill/LoadData",
                    method: "post",
                    dataSrc: ""
                }
            });

            //table.on('order.dt search.dt', function () {
            //    table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
            //        cell.innerHTML = i + 1;
            //    });
            //}).draw();
        });
    </script>
    <script src="~/Assets/Admin/dist/js/ajax/bill.js"></script>
}

