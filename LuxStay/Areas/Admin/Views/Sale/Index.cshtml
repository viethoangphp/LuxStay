@{
    ViewBag.Title = "Quản Lý Giảm Giá";
    Layout = "~/Areas/Admin/Views/Shared/__AdminLayout.cshtml";
}
@model IEnumerable<LuxStay.Areas.Admin.Data.SaleModel>
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản Lý Giá Ưu Đãi</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh sách Khuyến Mại</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-header end">
            <h3 class="card-title"><b></b></h3>
            <!-- Button trigger modal add -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#staticBackdrop">
                Thêm Mới
            </button>
            <!-- Modal add user -->
            <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg ">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="modal-title text-uppercase" id="staticBackdropLabel">Thêm Chương Trình Ưu Đãi Mới</h3>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span class="fos-40" aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form class="form-horizontal" id="Sale" method="post">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Giảm Giá:</label>
                                    <div class="input-group col-sm-10">
                                        <input type="number" class="form-control" name="persent" id="persent">
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="fa fa-percent" aria-hidden="true"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Từ Ngày:</label>
                                    <div class="input-group col-sm-10">
                                        <input type="text" class="form-control float-right" id="check_in">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="far fa-calendar-alt"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Tới Ngày:</label>
                                    <div class="input-group col-sm-10">
                                        <input type="text" class="form-control float-right" id="check_out">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="far fa-calendar-alt"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="password" class="col-sm-2 col-form-label">Trạng Thái</label>
                                    <div class="col-sm-10">
                                        <select id="status" class="form-control">
                                            <option selected value="1">Áp Dụng Ngay</option>
                                            <option value="2">Chờ Xác Nhận</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal" id="btn-cancel">Hủy</button>
                                    <button type="submit" class="btn btn-success">Thêm Mới</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="hoverflow-auto">
                @*<-- Modal user information-->*@
                <div class="modal fade" id="viewUserInform" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg ">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="modal-title text-uppercase" id="staticBackdropLabel">Thông Tin Chương Trình Khuyến Mại </h3>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span class="fos-40" aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form class="form-horizontal" id="Sale_View" method="post" data-id="">
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Giảm Giá:</label>
                                        <div class="input-group col-sm-10">
                                            <input type="number" class="form-control" name="persent" id="persent_view">
                                            <div class="input-group-append">
                                                <span class="input-group-text"><i class="fa fa-percent" aria-hidden="true"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Từ Ngày:</label>
                                        <div class="input-group col-sm-10">
                                            <input type="text" class="form-control float-right" id="check_in_view">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="far fa-calendar-alt"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Tới Ngày:</label>
                                        <div class="input-group col-sm-10">
                                            <input type="text" class="form-control float-right" id="check_out_view">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="far fa-calendar-alt"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="password" class="col-sm-2 col-form-label">Trạng Thái</label>
                                        <div class="col-sm-10">
                                            <select id="status_view" class="form-control">
                                                <option selected value="1">Áp Dụng Ngay</option>
                                                <option value="2">Chờ Xác Nhận</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal" id="btn-view-cancel">Hủy</button>
                                        <button type="submit" class="btn btn-success">Cập Nhật</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered judge-table " id="tableUser">
                    <thead class="">
                        <tr>
                            <th class="">STT</th>
                            <th class="">Giảm Giá</th>
                            <th class="">Ngày Áp Dụng</th>
                            <th class="">Ngày Kết Thúc</th>
                            <th class="">Ngày Tạo</th>
                            <th class="">Trạng Thái</th>  
                            <th class="">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                           
                            int count = 0;
                        }
                        @foreach (var item in Model)
                        {
                            count++;
                        <tr>
                            <td class="middle"><b>@count</b></td>
                            <td class="middle">@item.persent%</td>
                            <td class="middle">@item.check_in</td>
                            <td class="middle">@item.check_out</td>
                            <td class="middle">@item.create_at</td>
                            @if (item.status == 1)
                            {
                                <td class="middle">Đang Áp Dụng</td>

                            }
                            else
                            {
                                <td class="middle">Ngưng Áp Dụng</td>

                            }
                            <td class="middle">
                                <div class="d-flex d-flex justify-content-around">
                                    <button class="btn btn-danger btn-delete" data-id="@item.id">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                    <button class="btn btn-secondary btn-view" data-id="@item.id" data-toggle="modal" data-target="#viewUserInform">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->
@section js{
    <script src="~/Assets/Admin/dist/js/ajax/Sale.js"></script>
}
