                                <div class="invalid-feedback">Không Được Để Trống Trường Này</div>
                            </div>
                            <div class="form-group">
                                <label for="inputGender">Giới tính</label>
                                <select class="form-control" name="inputEditGender" id="inputEditGender" required>
                                    <option>(chọn)</option>
