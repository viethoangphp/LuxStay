            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <div class="h-600 overflow-auto">
                <!-- Modal user information-->

                <table class="table table-striped table-bordered judge-table " id="tableUser">
                    <!-- header table -->
                    <thead class="">
                        <tr>
                            <th class="w-80">STT</th>
                            <th class="w-250">Tên Phòng</th>
                            <th class="w-250">Khu Vực</th>
                            <th class="w-200">Loại Phòng</th>
                            <th class="w-200">Địa Chỉ</th>
                            <th class="w-150">Giá Cho Thuê</th>
                            <th class="w-150">Ảnh Đại Diện</th>
                            <th class="w-150">Trạng Thái</th>
                            <th class="w-130">Tác vụ</th>
                        </tr>
                    </thead>
                    <!-- end header table -->
                    <tbody>
                        @{
                            int count = 0;
                        }
                        @foreach (var item in Model)
                        {
                            count++;
                        <tr>
                            <td class="middle">@count</td>
                            <td class="middle">@item.roomName</td>
                            <td class="middle">@item.roomCategory</td>
                            <td class="middle">@item.roomLocation</td>
                            <td class="middle">@item.Address</td>
                            <td class="middle">@item.priceShow đ/Đêm</td>
                            <td class="middle">
                                <img src="@item.avatar" class="img-fluid" alt="Alternate Text" style="width:100px;" />
                            </td>
                            <td class="middle">Đang Cho Thuê</td>
                            <td class="middle">
                                <div class="d-flex d-flex justify-content-around">
                                    <button class="btn btn-danger btn-delete" data-id="@item.id">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                    <button class="btn btn-secondary btn-view" data-id="@item.id" data-toggle="modal" data-target="#viewUserInform">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>
