                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="modal-title text-uppercase" id="staticBackdropLabel">Thêm Phòng Mới</h3>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span class="fos-40" aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form class="form-horizontal" id="Room" method="post" action="/Admin/Room/Add" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="card card-primary card-outline card-outline-tabs">
                                            <div class="card-header p-0 border-bottom-0">
                                                <ul class="nav nav-tabs" id="custom-tabs-four-tab" role="tablist">
                                                    <li class="nav-item">
                                                        <a class="nav-link active" id="custom-tabs-four-home-tab" data-toggle="pill" href="#custom-tabs-four-home" role="tab" aria-controls="custom-tabs-four-home" aria-selected="true">Thông Tin Phòng</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link" id="custom-tabs-four-profile-tab" data-toggle="pill" href="#custom-tabs-four-profile" role="tab" aria-controls="custom-tabs-four-profile" aria-selected="false">Chi Tiết Phòng</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link" id="custom-tabs-four-messages-tab" data-toggle="pill" href="#custom-tabs-four-messages" role="tab" aria-controls="custom-tabs-four-messages" aria-selected="false">Ưu Đãi</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link" id="custom-tabs-four-settings-tab" data-toggle="pill" href="#custom-tabs-four-settings" role="tab" aria-controls="custom-tabs-four-settings" aria-selected="false">Tiện Ích</a>
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="card-body text-left">
                                                <div class="tab-content" id="custom-tabs-four-tabContent">
                                                    <div class="tab-pane fade active show" id="custom-tabs-four-home" role="tabpanel" aria-labelledby="custom-tabs-four-home-tab">
                                                        <div class="row">
                                                            <div class="form-group col-md-6">
                                                                <label for="" class="col-form-label">Tên Phòng</label>
                                                                <input type="text" class="form-control" placeholder="Vd : HomeStay ABC" name="roomName">
                                                            </div>
                                                            <div class="form-group col-md-6">
                                                                <label for="" class="col-form-label">Giá Phòng</label>
                                                                <input type="number" class="form-control" placeholder="Giá Cho Thuê" name="price">
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            @Html.Action("Location", "Room")
                                                            @Html.Action("Category", "Room")
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    <label for="" class="col-form-label">Số Giường Ngủ</label>
                                                                    <input type="number" class="form-control" placeholder="Số Giưởng Ngủ" name="bedRoom">
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    <label for="" class="col-form-label">Số Phòng Tắm</label>
                                                                    <input type="number" class="form-control" placeholder="Số Phòng Tắm" name="bathRoom">
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    <label for="" class="col-form-label">Số Phòng Ngủ</label>
                                                                    <input type="number" class="form-control" placeholder="Số Phòng Ngủ" name="bedNumber">
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <div class="form-group">
                                                                    <label for="" class="col-form-label">Số Lượng Người Ở</label>
                                                                    <input type="number" class="form-control" placeholder="Số Lượng Người Ở" name="peopleMax">
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <div class="form-group">
                                                                    <label for="" class="col-form-label">Diện Tích Phòng</label>
                                                                    <input type="number" class="form-control" placeholder="Diện Tích Home Stay" name="area">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-3">
                                                                <label for="" class="">Ảnh Đại Diện</label>
                                                                <div class="image-upload">
                                                                    <label>
                                                                        <img class="target" src="https://cdn-app.kiotviet.vn/retailler/bundles/2021616941/default-product-img.jpg" alt="">
                                                                    </label>
                                                                    <input type="file" class="upload-photo" name="avatarFile">
                                                                </div>
                                                            </div>
                                                            <div class="col-md-9">
                                                                <div class="form-group">
                                                                    <label for="" class="col-form-label">Địa Chỉ HomeStay</label>
                                                                    <input type="text" class="form-control" placeholder="Địa Chỉ HomeStay" name="Address">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <label for="" class="">Ảnh Chi Tiết Phòng</label>
                                                                <div class="row">
                                                                    <div class="col-md-3">
                                                                        <label for="" class="">Slider 1</label>
                                                                        <div class="image-upload">
                                                                            <label>
                                                                                <img class="target" src="https://cdn-app.kiotviet.vn/retailler/bundles/2021616941/default-product-img.jpg" alt="">
                                                                            </label>
                                                                            <input type="file" class="upload-photo" name="slider">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-3">
                                                                        <label for="" class="">Slider 2</label>
                                                                        <div class="image-upload">
                                                                            <label>
                                                                                <img class="target" src="https://cdn-app.kiotviet.vn/retailler/bundles/2021616941/default-product-img.jpg" alt="">
                                                                            </label>
                                                                            <input type="file" class="upload-photo" name="slider">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-3">
                                                                        <label for="" class="">Slider 3</label>
                                                                        <div class="image-upload">
                                                                            <label>
                                                                                <img class="target" src="https://cdn-app.kiotviet.vn/retailler/bundles/2021616941/default-product-img.jpg" alt="">
                                                                            </label>
                                                                            <input type="file" class="upload-photo" name="slider">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-3">
                                                                        <label for="" class="">Slider 4</label>
                                                                        <div class="image-upload">
                                                                            <label>
                                                                                <img class="target" src="https://cdn-app.kiotviet.vn/retailler/bundles/2021616941/default-product-img.jpg" alt="">
                                                                            </label>
                                                                            <input type="file" class="upload-photo" name="slider">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-md-3">
                                                                        <label for="" class="">Slider 5</label>
                                                                        <div class="image-upload">
                                                                            <label>
                                                                                <img class="target" src="https://cdn-app.kiotviet.vn/retailler/bundles/2021616941/default-product-img.jpg" alt="">
                                                                            </label>
                                                                            <input type="file" class="upload-photo" name="slider">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-3">
                                                                        <label for="" class="">Slider 6</label>
                                                                        <div class="image-upload">
                                                                            <label>
                                                                                <img class="target" src="https://cdn-app.kiotviet.vn/retailler/bundles/2021616941/default-product-img.jpg" alt="">
                                                                            </label>
                                                                            <input type="file" class="upload-photo" name="slider">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-3">
                                                                        <label for="" class="">Slider 7</label>
                                                                        <div class="image-upload">
                                                                            <label>
                                                                                <img class="target" src="https://cdn-app.kiotviet.vn/retailler/bundles/2021616941/default-product-img.jpg" alt="">
                                                                            </label>
                                                                            <input type="file" class="upload-photo" name="slider">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-3">
                                                                        <label for="" class="">Slider 8</label>
                                                                        <div class="image-upload">
                                                                            <label>
                                                                                <img class="target" src="https://cdn-app.kiotviet.vn/retailler/bundles/2021616941/default-product-img.jpg" alt="">
                                                                            </label>
                                                                            <input type="file" class="upload-photo" name="slider">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="tab-pane fade" id="custom-tabs-four-profile" role="tabpanel" aria-labelledby="custom-tabs-four-profile-tab">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="card card-outline card-info">
                                                                    <div class="card-header">
                                                                        <h3 class="card-title">
                                                                            Thông tin Chi Tiết
                                                                        </h3>

                                                                    </div>
                                                                    <!-- /.card-header -->
                                                                    <div class="card-body pad">
                                                                        <div class="mb-3">
                                                                            <textarea name="content" class="textarea" placeholder="Place some text here"
